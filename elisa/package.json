{
  "name": "elisa",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "setup": "npm ci",
    "build": "npm run build-dev",
    "start-link": "cross-env LINK=true npm run start",
    "start": "cross-env NODE_ENV=development LK_MODULE_CONTAINER=commonAssays LK_MODULE=elisa webpack-dev-server --config node_modules/@labkey/build/webpack/watch.config.js",
    "build-dev": "npm run clean && cross-env NODE_ENV=development LK_MODULE_CONTAINER=commonAssays LK_MODULE=elisa webpack --config node_modules/@labkey/build/webpack/dev.config.js --progress --profile --colors",
    "build-prod": "npm run clean && cross-env NODE_ENV=production PROD_SOURCE_MAP=source-map LK_MODULE_CONTAINER=commonAssays LK_MODULE=elisa webpack --config node_modules/@labkey/build/webpack/prod.config.js --progress --profile --colors",
    "clean": "rimraf resources/web/elisa/gen",
    "test": "cross-env NODE_ENV=test jest",
    "teamcity": "cross-env NODE_ENV=test jest --testResultsProcessor=jest-teamcity-reporter"
  },
  "jest": {
    "globals": {
      "LABKEY": {}
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "setupFilesAfterEnv": [
      "./test/jest.setup.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(\\.(test|spec))\\.(ts|tsx)$",
    "preset": "ts-jest",
    "testMatch": null,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.(css|scss)$": "<rootDir>/test/styleMock.ts"
    },
    "testResultsProcessor": "jest-teamcity-reporter"
  },
  "dependencies": {
    "@labkey/components": "1.10.0"
  },
  "devDependencies": {
    "@labkey/build": "1.0.0-fb-postcssLoaderFix.0",
    "@types/enzyme": "3.10.5",
    "@types/enzyme-adapter-react-16": "1.0.6",
    "@labkey/eslint-config-base": "0.0.8",
    "@labkey/eslint-config-react": "0.0.8",
    "@types/jest": "25.2.3",
    "babel-jest": "26.0.1",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.2",
    "enzyme-to-json": "3.5.0",
    "jest": "26.0.1",
    "jest-cli": "24.9.0",
    "jest-teamcity-reporter": "0.9.0",
    "react-test-renderer": "16.8.6",
    "ts-jest": "26.0.0"
  }
}
