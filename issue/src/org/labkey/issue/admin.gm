<%@ page import="org.labkey.api.util.PageFlowUtil"%>
<br>
<table border=0 cellspacing=4 cellpadding=0>
<tr><td><a href="list.view?.lastFilter=true"><img border=0 src="<%=PageFlowUtil.buttonSrc("Back to Issues")%>"></a></td></tr>
<tr><td>&nbsp;</td></tr>
</table>

<% currentView.include(currentView.getView("keywordView")); %>

<br>

<table width=100% cellspacing=2 cellpadding=0 border=0><tr>
<td valign=top>
    <% currentView.include(currentView.getView("requiredFieldsView")); %>
</td>
<td valign=top>
    <form action="setCustomColumnConfiguration.post" method="post">
    <table border=0 cellspacing=4 cellpadding=0>
    <tr><td class=normal colspan=2 align=center><div class="ms-searchform"><b>Custom Columns</b></div></td></tr>
    <tr><td class=normal colspan=2>Enter captions below to use custom columns in this issues list:</td></tr>
    <tr><td colspan=2>&nbsp;</td></tr>
    <tr><td>Integer1</td><td><input name="int1" value="${captions.int1}" size=20></td></tr>
    <tr><td>Integer2</td><td><input name="int2" value="${captions.int2}" size=20></td></tr>
    <tr><td>String1</td><td><input name="string1" value="${captions.string1}" size=20><input type="checkbox" name="${pickListName}" value="string1" <%=pickLists.contains("string1") ? "checked" : ""%>>Use pick list for this column</td></tr>
    <tr><td>String2</td><td><input name="string2" value="${captions.string2}" size=20><input type="checkbox" name="${pickListName}" value="string2" <%=pickLists.contains("string2") ? "checked" : ""%>>Use pick list for this column</td></tr>
    <tr><td colspan=2>&nbsp;</td></tr>
    <tr><td colspan=2 align=center><input type="image" src="<%=PageFlowUtil.buttonSrc("Configure Custom Columns")%>" value="Set Captions"></td></tr>
    </table>
    </form>
</td>
</tr></table>